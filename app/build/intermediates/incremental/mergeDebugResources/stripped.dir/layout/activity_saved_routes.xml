<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavedRoutes">

    <ImageButton
        android:id="@+id/returnBtn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <TextView
        android:id="@+id/SavedRoutesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Saved Routes"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/homeBtnShowTransports7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_dialog_dialer" />


    <Button
        android:id="@+id/trip1"
        android:layout_width="323dp"
        android:layout_height="79dp"

        android:layout_marginTop="82dp"

        android:layout_marginBottom="31dp"
        android:text="Aveiro-Estarreja"
        app:layout_constraintBottom_toTopOf="@+id/trip2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SavedRoutesTitle"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/trip4"
        android:layout_width="323dp"
        android:layout_height="79dp"

        android:layout_marginTop="412dp"
        android:layout_marginBottom="174dp"
        android:text="Porto-Aveiro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SavedRoutesTitle" />

    <Button
        android:id="@+id/trip3"
        android:layout_width="323dp"
        android:layout_height="79dp"

        android:layout_marginTop="303dp"
        android:layout_marginBottom="32dp"
        android:text="Estarreja-Porto"
        app:layout_constraintBottom_toTopOf="@+id/trip4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SavedRoutesTitle"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/trip2"
        android:layout_width="323dp"
        android:layout_height="79dp"

        android:layout_marginTop="192dp"
        android:layout_marginBottom="32dp"
        android:text="Aveiro-Porto"
        app:layout_constraintBottom_toTopOf="@+id/trip3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SavedRoutesTitle"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>