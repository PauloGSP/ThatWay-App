<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CityPrivateTransports">

    <TextView
        android:id="@+id/locationShowTransports2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138" />

    <ImageButton
        android:id="@+id/returnBtn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="18dp" />

    <TextView
        android:id="@+id/CT_LocationFiltersTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='"Transport Type"'
        android:textSize="28sp"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="31dp" />

    <ImageButton
        android:id="@+id/homeBtnShowTransports6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_dialog_dialer"
        tools:layout_editor_absoluteX="341dp"
        tools:layout_editor_absoluteY="18dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="336dp"
        android:layout_height="505dp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="165dp" />
</androidx.constraintlayout.widget.ConstraintLayout>