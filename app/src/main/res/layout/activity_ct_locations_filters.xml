<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CT_LocationsFilters">

    <ImageButton
        android:id="@+id/homeBtnShowTransports2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_dialog_dialer"
        tools:layout_editor_absoluteX="341dp"
        tools:layout_editor_absoluteY="18dp" />

    <ImageButton
        android:id="@+id/returnBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="18dp" />

    <TextView
        android:id="@+id/CT_LocationFiltersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Trip"
        android:textSize="28sp"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="31dp" />

    <Button
        android:id="@+id/filtersBtn"
        android:layout_width="112dp"
        android:layout_height="41dp"
        android:text="Filter by"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="151dp" />

    <Button
        android:id="@+id/searchResultsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Search Results"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        tools:layout_editor_absoluteX="123dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="331dp"
        android:layout_height="319dp"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/addBreakpointBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add breakpoint"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="531dp" />

</androidx.constraintlayout.widget.ConstraintLayout>