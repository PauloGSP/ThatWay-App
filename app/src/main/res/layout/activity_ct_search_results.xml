<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CT_SearchResults">

    <ImageButton
        android:id="@+id/returnBtn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="18dp" />

    <TextView
        android:id="@+id/CT_SearchResultsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Results"
        android:textSize="28sp"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="31dp" />

    <ImageButton
        android:id="@+id/homeBtnShowTransports4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_dialog_dialer"
        tools:layout_editor_absoluteX="341dp"
        tools:layout_editor_absoluteY="18dp" />

    <Button
        android:id="@+id/changeLocationFiltersBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change location/filters"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="108dp" />

    <TextView
        android:id="@+id/chooseResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='Choose result from "origin" to "destiny":'
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="191dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="345dp"
        android:layout_height="487dp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="228dp" />
</androidx.constraintlayout.widget.ConstraintLayout>