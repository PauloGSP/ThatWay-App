        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="18dp" />

    <TextView
        android:id="@+id/RouteDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
